.recent-posts

  article
    border-bottom: 1px solid #EEE
    margin-bottom: 1rem
    padding-bottom: 1rem
    max-width: 100%

    *
      max-width: 100%

    blockquote
      font-style: italic
      margin: 0
      padding: 0 1rem

    time
      color: #AAA

    h1
      font-size: 2rem
      margin: 0
      font-weight: 300
      line-height: 1.2

      a
        text-decoration: none

    h2, h3, h4, h5
      font-size: 1rem


    &:last-of-type
      border: none
